	.navigation{
  font-size: 24rpx;
}
.navigation .mask{
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  position: fixed;
  left: 0;
  top: 0;
  transition: 1s;
  z-index: 999999
}
@keyframes action{
    0%{top:-100%;}
    100%{top:0;}
}
.navigation-btn{
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  background-color: #88bd79;
  margin: 20rpx 20rpx 20rpx 600rpx;
  padding: 10rpx;
  cursor: pointer;
  box-sizing: border-box;
}
.navigation-btn image{
  width: 60rpx;
  height: 60rpx;
}  
.navigation-content{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000000;
  width: 100%;
  max-height: 60%;
  animation: action 1s;
  animation-fill-mode: both;
  max-height: 60%;
  overflow-y: auto;
}
.navigation-item{
  padding: 0 10px;
  background-color: #88bd79;
  height: 60rpx;
  line-height: 60rpx;
  text-align: left;
  color: #fff;
  border-bottom: 1px solid #e9e9e9;
}
.navigation-item:last-child{
  border-bottom: none;
}
.navigation-item navigator{
  color: #fff;
  display: block;
}
