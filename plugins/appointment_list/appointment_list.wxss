.product-list{
  width: 100%;
  font-size: 24rpx;
}
.product-list-nav{
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-bottom: 1rpx solid #e9e9e9;
  font-size: 28rpx;
}
.nav-item{
  text-align: center;
  padding: 0 10rpx;
  border-bottom: 1rpx solid transparent;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.product_list_title{
  height: 80rpx;
  line-height: 80rpx;
  font-size:28rpx;
  color:#535353;  
}
.list_title{
  line-height: 80rpx !important;
}

.operate{
  height: 80rpx;
  padding: 25rpx 0 20rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  box-sizing: border-box;
   align-items: center; 
}
.operate text{
  line-height: 20rpx;
}
.desc{
  height: 40rpx;
  line-height: 40rpx;
}
.list-btn{
  width: 95%;
  height: 70rpx;
  font-size: 24rpx;
  line-height: 70rpx;
  text-align: center;
  border: 1rpx solid #dddee1;
  border-radius: 8rpx;
  margin: 0rpx auto 20rpx;
}

.addmore{
    width: 95%;
    height: 35px;
    line-height: 35px;
    text-align: center;
    border: 1px solid #dddee1;
    border-radius: 4px;
    margin: 10px auto;
    cursor: pointer;
    font-size: 14px;}




.appointment_list_container {
    display: flex;
    flex-wrap: wrap;
    font-size: 15px;
    font-family: "微软雅黑";
    flex-direction: row;
  }
  .view-list{
    width: 50%;
    box-sizing: border-box
  }
  .product-item{
    border: 1px solid #dddee1;
    padding: 3px;
    margin: 4px;
  }
  .view-list image{
    width: 100%;
    height: 150px;
    margin: 0 auto;
    display: block;
  }

  .view-list-detail{
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    margin-top: 5px;
    color: #b5b5b5;
    font-size: 12px
  }
  .view-list-time{
    line-height: 20px;
    margin-top: 5px;
  }
  .view-list-time-l{
    display: flex;
    flex-wrap: wrap;
    font-size: 10px;
    font-family: "微软雅黑";
    color: #b5b5b5;
  }
  .view-list-time-l1{line-height: 20px;text-decoration:line-through;margin-right: 8px}
  .view-list-time-l2{line-height: 20px;color: #ff8695;font-size:12px;margin-right: 8px}
  .view-list-time-l3{line-height: 20px;padding-left: 5px;margin-right: 8px}
  .view-list-time-l4{line-height: 20px;color: #ff8695;font-size:10px;margin-right: 8px}
  .view-list-time-r{
    float: right;
  }
.btn-list{
  display: flex;
  margin-top: 8px;
}
.btn-list-p{border:1px solid #ff0036;
height:30px;
line-height:30px;
text-align:center;
margin:1px;
background:#ffeded;
color:#ff0036;
border-radius:5px;
font-size:12px;
flex: 1;
overflow: hidden;
text-overflow: ellipsis;
white-space: nowrap
}
.btn-list-b{border: 1px solid red;height:30px;line-height:30px;margin:1px;border-radius:5px;flex: 1}
.btn-list-b button{color: #ffffff;height:30px;line-height:30px;font-size: 12px;}
 @media only screen and (width:320px) 
{
  .btn-list-b button,.btn-list-p{font-size: 10px;}
} 
