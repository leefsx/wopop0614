.coupon-box{
  padding: 20rpx 10rpx;
}
.coupon-list{
  margin-bottom: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.coupon-list-left{
  width: 30%;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-content: center;
  color: #fff;
  height: 100rpx;
  padding: 10rpx 0;
}
.coupon-list-left.sub_color{
  background-color: #d7d7d7;
}
.coupon-list-left view:first-child{
  font-size: 28rpx;
}
.coupon-list-right{
  width: 70%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-content: flex-start;
  height: 100rpx;
  padding: 10rpx 0 10rpx 10rpx;
  position: relative;
  border: 1rpx solid #e9e9e9;
  border-left: none;
}
.coupon-status{
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  padding: 6rpx 0;
  border: 1rpx solid #e9e9e9;
  border-radius: 10rpx;
  width: 120rpx;
  text-align: center;
}
.coupon-status.all{
  color: #fff;
}
.coupon-status.overdue{
  color: #fff;
  background-color: #bcbcbc;
}