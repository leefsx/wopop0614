@import '../../common/fonts/comm.wxss';
.coupon{
    width: 100%;
    height: 100%;
    font-size: 24rpx;
}
.coupon-title{
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    border-bottom: 1rpx solid #e9e9e9;
    font-size: 32rpx;
}
.coupon-nav{
    height: 75rpx;
    border-bottom: 1rpx solid #e9e9e9;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    text-align: center;
    line-height: 75rpx;
}   
.coupon-nav view{
    width: 33.3%;
    border-bottom: 6rpx solid transparent;
}
