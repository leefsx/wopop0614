@import '../../common/fonts/comm.wxss';
.border_bottom{
  border-bottom: 1rpx solid #dddee1;
}
.cart-box{
    padding-bottom: 100rpx;
}
.cart-list{
    position: relative;
    padding: 20rpx 20rpx 20rpx 285rpx;
    height: 200rpx;
}
.cart-list .cart-pro-select{
    position: absolute;
    left: 20rpx;
    top: 90rpx;
    width: 75rpx;
    height: 75rpx;
}

.cart-list .cart-thumb{
    position: absolute;
    top: 20rpx;
    left: 85rpx;
    width: 185rpx;
    height: 185rpx;
}
.cart-list .cart-pro-name{
    display: inline-block;
    width: 300rpx;
    height: 50rpx;
    line-height: 50rpx;
    overflow: hidden;
    font-size: 45rpx;
}
.cart-list .cart-pro-price{
    display: block;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 45rpx;
}
.cart-list .cart-pro-sku{
    display: block;
    height: 35rpx;
    line-height: 35rpx;
    font-size: 28rpx;
    overflow:hidden;
}
.cart-list .cart-count-box{
    position: absolute;
    left: 285;
    bottom: 10rpx;
    width: 250rpx;
    height: 80rpx;
}
.cart-list .inner-block{
  display: inner-block;
  float: left;
}
.cart-list .cart-count-box text{
    display: inline-block;
    line-height: 80rpx;
    text-align: center;
}
.cart-count-down,.cart-count-add{
    font-size: 44rpx;
    width: 50rpx;
    height: 100%;
}
.cart-count-num{
    width: 100rpx;
    margin-top: 10rpx;
    text-align: center;
}
.cart-del{
    position: absolute;
    right: 20rpx;
    top: 20rpx;
}
.cart-footer{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100rpx;
    padding:0 0rpx 0 80rpx;
    box-sizing: border-box;
    border-top: 1rpx solid #e9e9e9;
    background-color: #fff;
}
.total-select{
    line-height: 100rpx;
    position: absolute;
    left: 20rpx;
    top: 20rpx;
    width: 45rpx;
    height: 45rpx;
}
.order-icon{
    position: absolute;
    right: 40rpx;
    top: 25rpx;
    width: 45rpx;
    height: 45rpx;
    background-image: url(/image/icon3.png);
    background-size: 100%;
}
.cart-toatl-tex{
  display:inline-block;
  height:100rpx;
  line-height:100rpx;
  text-decoration: underline;
}
.cart-toatl-price text{
  font-weight: bold;
}
.cart-toatl-qjs{
  display: inline-block;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #d3d3d3;
  width: 190rpx;
  text-align: center;
  color: #fff;
}

.cart-no-data{
    padding:40rpx 0;
    color: #707070;
    text-align: center;
}
.cart-top{
    height: 90rpx;
}
.cart-top-tex{
    display:inline-block;
    margin-left:80rpx;
    line-height:90rpx;
}
.cart-pro-select-top{
    line-height: 90rpx;
}
.cart-toatl-js-price{
    height: 100rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    padding-right: 20rpx;
    text-align: right;
}
.cart-toatl-js-price .cart-toatl-addPri{
  font-weight: normal;
}