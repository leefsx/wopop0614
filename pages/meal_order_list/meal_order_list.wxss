@import '../../common/fonts/comm.wxss';
.main{
    width: 100%;
    height: 100%;
}
.my-list{
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    border-bottom: 1rpx solid #e9e9e9;
    font-size: 32rpx;
}
.my-list-nav{
    height: 75rpx;
    border-bottom: 1rpx solid #e9e9e9;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    text-align: center;
    line-height: 75rpx;
}
.my-list-nav view{
    width: 20%;
    border-bottom: 6rpx solid transparent;
}
