@import '../../common/fonts/comm.wxss';

Page {
  background-color: #ededed;
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  overflow-y: auto;
}
.recharge {
  width: 100%;
  height: 100%;
  font-size: 28rpx;
}
.recharge .inpbox {
  background-color: #fff;
  height: 64rpx;
  line-height: 64rpx;
  margin: 40rpx 20rpx;
  padding: 0 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
}
.recharge .inpbox > .title {
  display: inline-block;
  float: left;
  font-weight: bold;
}
.recharge .inpbox > input {
  float: left;
  height: 64rpx;
  margin-left: 50rpx;
  width: 560rpx;
}
.recharge .btnsubmit,
.recharge > .btnlist {
  color: #fff;
  font-size: 24rpx;
  height: 64rpx;
  line-height: 64rpx;
  margin: 0 20rpx;
  width: 710rpx;
}
.recharge .btnsubmit {
  border: none;
  margin-bottom: 20rpx;
}
.recharge > .btnlist {
  background-color: #7e7e7e;
  border-radius: 8rpx;
  text-align: center;
}