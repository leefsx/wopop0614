@import '../../common/fonts/comm.wxss';

Page {
  background-color: #ededed;
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  overflow-y: auto;
}
.recharge-list {
  width: 100%;
  height: 100%;
  font-size: 24rpx;
}
.recharge-list > .row {
  border-bottom: 2rpx solid #d8d8d8;
  padding: 10rpx 20rpx 6rpx;
  overflow: hidden;
}
.recharge-list .side-left {
  float: left;
  width: 600rpx;
}
.recharge-list .side-left > .title,
.recharge-list .side-left > .date {
  display: inline-block;
  float: left;
  width: 100%;
}
.recharge-list .side-left > .title {
  height: 48rpx;
  line-height: 48rpx;
}
.recharge-list .side-left > .date {
  color: #c5c5c5;
  font-size: 22rpx;
  height: 32rpx;
  line-height: 32rpx;
}
.recharge-list .side-right {
  color: #d80134;
  float: right;
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
  width: 108rpx;
}
.recharge-list > .pagebox {
  border-bottom: 2rpx solid #d8d8d8;
  color: #c5c5c5;
  height: 2rpx;
  margin: 80rpx 10% 0;
  text-align: center;
  width: 80%;
}
.recharge-list > .pagebox > text {
  background-color: #ededed;
  display: inline-block;
  height: 48rpx;
  line-height: 48rpx;
  padding: 0 30rpx;
  margin-top: -26rpx;
  overflow: hidden;
}